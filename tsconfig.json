{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "alwaysStrict": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "es2015",
        "outDir": "./lib",
        "declaration": true,
        "allowJs": false
    },
    "exclude": ["./build/**/*", "./node_modules/**/*", "./__tests__", "./lib/**/*"]
}
